.container {
  background: #f0f0f0;
  padding: 1rem;

  form {
    label {
      display: block;
      margin-top: 0.5rem;
      margin-bottom: 0.5rem;
    }
    
    button {
      margin-left: 0.5rem;
    }
  }
}

.itemWrapper {
  display: inline-block;
  width: 25%;
  padding: 0.5rem;

  button {
    margin-top: 0.5rem;
  }
}

.itemInner {
  background: #ddd;
  border: 1px solid #aaa;
  border-radius: 3px;
  padding: 0.5rem;
}